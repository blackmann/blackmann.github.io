---
import type { CollectionEntry } from 'astro:content'
import BaseHead from '../components/BaseHead.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import FormattedDate from '../components/FormattedDate.astro'
import type { MarkdownHeading } from 'astro'

type Props = CollectionEntry<'blog'>['data'] & {
  headings: MarkdownHeading[]
}

const { title, description, headings: headingsRaw, pubDate } = Astro.props
const headings = headingsRaw.filter(
  (h) => h.depth < 4 && h.text !== 'Footnotes',
)
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body>
    <Header />

    <main class="container mt-[8rem]">
      <article>
        <h1 class="text-2xl font-bold mt-2">{title}</h1>
        <div class="text-zinc-500 dark:text-neutral-400 mb-[4rem]">
          <FormattedDate date={pubDate} />
        </div>
        <slot />
      </article>
    </main>

    <Footer />
  </body>
</html>
