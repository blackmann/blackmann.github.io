---
import type { CollectionEntry } from 'astro:content'
import BaseHead from '../components/BaseHead.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import FormattedDate from '../components/FormattedDate.astro'
import type { MarkdownHeading } from 'astro'

type Props = CollectionEntry<'blog'>['data'] & {
  headings: MarkdownHeading[]
}

const { title, description, headings: headingsRaw, pubDate, tags } = Astro.props
const headings = headingsRaw.filter(
  (h) => h.depth < 4 && h.text !== 'Footnotes',
)
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body>
    <Header />

    <main class="container mt-[8rem]">
      <article>
        <div>
          <h1
            class="text-2xl font-bold mt-2 inline"
            transition:name={`page-title:${title}`}
          >
            {title}
          </h1>
        </div>
        <div class="text-zinc-500 dark:text-neutral-400 mb-[4rem]">
          <FormattedDate date={pubDate} />

          <ul class="flex gap-2 list-none ms-0">
            {
              tags?.map((tag) => (
                <li>
                  <code class="bg-zinc-200 px-2 rounded-md">{tag}</code>
                </li>
              ))
            }
          </ul>
        </div>
        <slot />
      </article>
    </main>

    <Footer />
  </body>
</html>
