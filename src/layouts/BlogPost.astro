---
import type { CollectionEntry } from 'astro:content'
import BaseHead from '../components/BaseHead.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import FormattedDate from '../components/FormattedDate.astro'
import type { MarkdownHeading } from 'astro'

type Props = CollectionEntry<'blog'>['data'] & {
  headings: MarkdownHeading[]
}

const { title, description, headings: headingsRaw, pubDate, tags } = Astro.props
const headings = headingsRaw.filter(
  (h) => h.depth < 4 && h.text !== 'Footnotes',
)
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description!} />
  </head>

  <body>
    <Header />

    <main class="container mt-[8rem]">
      <article>
        <div>
          <h1
            class="mt-2 inline text-2xl font-bold"
            transition:name={`page-title:${title}`}
          >
            {title}
          </h1>
        </div>
        <div class="mb-[4rem] text-zinc-500 dark:text-neutral-400">
          <FormattedDate date={pubDate} />

          <ul class="ms-0 flex list-none gap-2">
            {
              tags?.map((tag) => (
                <li class="!mt-0">
                  <code class="rounded-md bg-zinc-200 px-2 dark:bg-neutral-800">
                    {tag}
                  </code>
                </li>
              ))
            }
          </ul>
        </div>
        <slot />
      </article>
    </main>

    <Footer />
  </body>
</html>
