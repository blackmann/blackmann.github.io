---
import HeaderLink from './HeaderLink.astro'
const topics = [
  { title: 'Apps', slug: 'apps' },
  { title: 'People', slug: 'people' },
  { title: 'Websites', slug: 'websites' },
  { title: 'Repositories', slug: 'repositories' },
  { title: 'Shows/Movies', slug: 'shows' },
]
---

<div class="text-secondary d-sm-none mt-3">
  Swipe horizontally on the links to reveal others 👉🏽
</div>

<ul class="list-unstyled">
  {
    topics.map((topic) => (
      <li class="py-2">
        <HeaderLink href={`/cool-stuff/${topic.slug}`}>
          {topic.title}
        </HeaderLink>
      </li>
    ))
  }
</ul>

<style>
  ul {
    display: flex;
    max-width: 100%;
    overflow-x: auto;
  }

  li {
    margin-right: 1rem;
  }
</style>
