---
import NavLink from './NavLink.astro'

const dev = process.env.NODE_ENV !== 'production'
---

<header class="container mx-auto">
  <h2 class="mb-[2rem] py-3">
    <img src="/okgr.svg" alt="okgr" class="h-[18px]" />
  </h2>

  <nav class="hover-link flex items-center gap-2">
    <NavLink href="/">Home</NavLink>

    <NavLink href="/projects">Projects</NavLink>

    <NavLink href="/blog">Blog</NavLink>

    {dev && <NavLink href="/courses">Courses</NavLink>}

    <NavLink href="/about">About</NavLink>

    <NavLink
      class="text-blue-500"
      href="https://twitter.com/_yogr"
      target="_blank">
      <span class="i-lucide-twitter" title="Twitter"></span>
    </NavLink>

    <NavLink href="https://github.com/blackmann" target="_blank">
      <span class="i-lucide-github" title="Github"></span>
    </NavLink>
  </nav>
</header>
